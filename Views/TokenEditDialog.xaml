<Window x:Class="SaveCodeClassfication.Views.TokenEditDialog"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        mc:Ignorable="d"
        Title="Token Edit" Height="300" Width="400"
        WindowStartupLocation="CenterOwner"
        ResizeMode="NoResize">
    <Grid Margin="20">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <!-- Header -->
        <Border Grid.Row="0" Background="#f0f8ff" CornerRadius="8" Padding="15" Margin="0,0,0,20">
            <StackPanel Orientation="Horizontal">
                <TextBlock Text="Edit" FontSize="20" VerticalAlignment="Center" Margin="0,0,10,0"/>
                <StackPanel>
                    <TextBlock Text="Token Edit" FontSize="16" FontWeight="Bold"/>
                    <TextBlock Text="Edit token effective date" FontSize="12" Foreground="Gray"/>
                </StackPanel>
            </StackPanel>
        </Border>

        <!-- Edit Form -->
        <GroupBox Grid.Row="1" Header="Token Information" Padding="15">
            <Grid>
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                </Grid.RowDefinitions>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="100"/>
                    <ColumnDefinition Width="*"/>
                </Grid.ColumnDefinitions>

                <!-- Token -->
                <TextBlock Grid.Row="0" Grid.Column="0" Text="Token:" VerticalAlignment="Center" FontWeight="Bold" Margin="0,0,10,10"/>
                <TextBox Grid.Row="0" Grid.Column="1" Name="TxtToken" IsReadOnly="True" 
                         FontFamily="Consolas" FontWeight="Bold" Background="#f8f9fa"
                         Padding="8,4" Margin="0,0,0,10"/>

                <!-- Current Date -->
                <TextBlock Grid.Row="1" Grid.Column="0" Text="Current Date:" VerticalAlignment="Center" FontWeight="Bold" Margin="0,0,10,10"/>
                <TextBlock Grid.Row="1" Grid.Column="1" Name="TxtCurrentDate" 
                          VerticalAlignment="Center" Margin="0,0,0,10" FontSize="14"/>

                <!-- New Date -->
                <TextBlock Grid.Row="2" Grid.Column="0" Text="New Date:" VerticalAlignment="Center" FontWeight="Bold" Margin="0,0,10,10"/>
                <DatePicker Grid.Row="2" Grid.Column="1" Name="DatePickerNewDate" 
                           Height="30" Margin="0,0,0,10"/>

                <!-- Status -->
                <TextBlock Grid.Row="3" Grid.Column="0" Text="Status:" VerticalAlignment="Center" FontWeight="Bold" Margin="0,0,10,0"/>
                <TextBlock Grid.Row="3" Grid.Column="1" Name="TxtStatus" 
                          VerticalAlignment="Center" FontSize="14"/>
            </Grid>
        </GroupBox>

        <!-- Buttons -->
        <StackPanel Grid.Row="2" Orientation="Horizontal" HorizontalAlignment="Right" Margin="0,20,0,0">
            <Button Name="BtnSave" Content="Save" 
                   Background="#007bff" Foreground="White"
                   Click="BtnSave_Click"
                   Height="35" MinWidth="80" Padding="15,5"
                   FontSize="14" FontWeight="Bold" Margin="0,0,10,0"/>
            <Button Name="BtnCancel" Content="Cancel" 
                   Background="#6c757d" Foreground="White"
                   Click="BtnCancel_Click"
                   Height="35" MinWidth="80" Padding="15,5"
                   FontSize="14" Margin="10,0,0,0"/>
        </StackPanel>
    </Grid>
</Window>